<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                                       xmlns:app="http://schemas.android.com/apk/res-auto"
                                       xmlns:tools="http://schemas.android.com/tools"
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent"
                                       android:background="@drawable/background_rounded_base">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".main.fragments.LandingFragment">

        <TextView
                tools:text="Addin Cendekia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_username"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp" android:textColor="#FFFFFF"
                android:textStyle="bold" android:textSize="24sp" android:layout_marginTop="20dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                tools:text="IDR 287.000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_saldo" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_username" android:textSize="16sp"
                android:layout_marginStart="20dp" app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/colorAppAccent" android:drawableStart="@drawable/ic_account_balance_info_24dp"
                android:drawablePadding="5dp"/>
        <ImageView
                android:layout_width="68dp"
                android:layout_height="68dp" app:srcCompat="@drawable/avatar_noimage"
                android:id="@+id/iv_url"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="20dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/tv_username"
                app:layout_constraintBottom_toBottomOf="@+id/tv_saldo"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_coming_soon"
                android:text="@string/home_coming_title"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp" android:textSize="20sp" android:textColor="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@+id/rv_now_playing" android:layout_marginTop="35dp"/>
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/rv_coming_soon" app:layout_constraintTop_toBottomOf="@+id/tv_coming_soon"
                android:layout_marginTop="20dp"
                android:paddingLeft="20dp" android:clipToPadding="false" android:paddingRight="20dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_now_playing"
                android:text="@string/home_playing_title" android:layout_marginTop="35dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_saldo" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp" android:textSize="20sp" android:textColor="#FFFFFF"/>
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_now_playing" android:id="@+id/rv_now_playing"
                android:paddingLeft="20dp" android:clipToPadding="false"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>